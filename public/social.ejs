		<script type="text/javascript">
		function myFunction() {
			var url_string = window.location.pathname
			document.getElementById("link_app_list").setAttribute('href', 'salvaapp:/' + url_string);
			$.ajax({
				url: "https://salva-api.herokuapp.com/friends" + url_string.substring(7),
				type: 'GET',
				dataType: 'json', // added data type
				success: function(res) {
					console.log(res.name);
					$("#name1").text(res.name);
					$("#name2").text(res.name);
					res.products.forEach(element => $("#list").append('<a target="_blank" href="'+element.url+'"><div class="item"><div class="image"><img width="80px" src="'+element.imageName+'" /></div><div class="arrow">→</div>	<div class="description"><span>'+element.description+'</div></span></div></a>'));
				},
				error: function() {
					$('.hero_user').css("display", "none");
					$('.hero_template').css("display", "block");
				}
			});
		}
		</script>
